<.header>
  Listing Products
  <:actions>
    <.link href={~p"/products/new"}>
      <.button>New Product</.button>
    </.link>
    <.link href={~p"/users"}>
      <.button>See Users</.button>
    </.link>
  </:actions>
</.header>

<.table id="products" rows={@products} row_click={&JS.navigate(~p"/products/#{&1}")}>
  <:col :let={product} label="Amount available"><%= product.amount_available %></:col>
  <:col :let={product} label="Cost"><%= product.cost %></:col>
  <:col :let={product} label="Product name"><%= product.product_name %></:col>
  <:col :let={product} label="Owner" ><%= product.owner %></:col>
  <:action :let={product}>
    <div class="sr-only">
      <.link navigate={~p"/products/#{product}"}>Show</.link>
    </div>
    <.link navigate={~p"/buy/#{product}/"}>Buy</.link>
  </:action>
  <:action :let={product}>
    <.link href={~p"/products/#{product}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>
